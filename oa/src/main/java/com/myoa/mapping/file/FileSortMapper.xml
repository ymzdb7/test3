	<select id="getFileSort" resultMap="file_SortResultMap" parameterType="com.myoa.model.file.FileSortModel">
		select  <include refid="FileSort"/> ,'folder' as fileType  from file_sort  where  1=1 
		<if test="sortId != null and sortId !=''" >
           and SORT_ID=#{sortId}
        </if>
        <if test="sortParent != null">
           and SORT_PARENT=#{sortParent}
        </if>
         <if test="sortName != null and sortName !=''" >
           and SORT_NO=#{sortName}
        </if>
         <if test="userId != null and userId !=''" >
           and USER_ID=#{userId}
        </if>
        <if test="sortType != null and sortType !=''" >
           and SORT_TYPE=#{sortType}
          </if>
          order by (SORT_NO+0) asc
	</select>

