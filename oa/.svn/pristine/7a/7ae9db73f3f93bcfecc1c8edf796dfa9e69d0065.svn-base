@import url(m_reset.css);
html,
body,
.wrap{
	/*width:100%;
	height:100%;
	overflow: hidden;*/
}
.head{
	width:100%;
	height:45px;
	background:#fff;
	border-bottom:1px solid #000;
}
.head_left,.head_mid,.head_rig{
	float:left;
	height:100%;
}

.head_left{
	width: 100%;
}
.head_left img {
	display: inline-block;
	float: left;
	width: 25px;
	margin-top: 11px;
	margin-left: 30px;
}
.head_left h1{
	font-size: 22px;
	/*font-weight: bold;*/
	height: 100%;
	line-height: 45px;
	text-align: left;
	display: inline-block;
	float: left;
	width: 227px;
	margin-left: 12px;
}
.inp{
	width: 200px;
	height: 27px;
	border-radius: 6px;
	margin-top: 10px;
	margin-left: 97px;
}
.search{
	width: 65px;
	height: 28px;
	background: #45c0cf;
	margin-top: 10px;
	margin-left: 30px;
	border-radius: 5px;
}
.search h1{
	text-align: center;
	color: #fff;
	font-size: 14px;
	line-height: 28px;
}
.head_mid{
	width: 75%;
}
.inp,.search{
	float:left;
}
.head_rig{
	width: 10%;
	float:right;
}
.head_rig h1{
	width: 72px;
	height: 30px;
	/*background: #4093f3;*/
	/*color: #fff;*/
	font-size: 16px;
	text-align: center;
	line-height: 30px;
	border-radius: 4px;
	margin: 10px auto;
	/*border:1px solid red;*/
}
.cont{
	width:100%;
	height:101%;
	overflow-y: scroll;
}

.cont_left{
	width:19%;
	height:100%;
	border-right:1px solid #000;
	overflow-y:scroll
}
.cont_rig{
	overflow-y:auto;
	overflow-x: hidden;
	width:80%;
	height:100%;

}
.cont_left,.cont_rig{
	float:left;
}
.cont_left .dept_li {
	display: block;
	width: 100%;
	padding-left: 14px;
	font-size: 14px;
	height: 40px;
	line-height: 40px;
	border-bottom: #ddd 1px solid;
	cursor: pointer;
	color: #000;
}
#deptOrg a {
	color: #000;
}
.cont_left .liUp:hover {
	background-color: #c3e7ff;
}
.add_back {
	background: #c3e7ff !important;
}
#deptOrg span {
	display: block;
	width: 100%;
	/*padding: 8px 0;*/

}
#deptOrg span:hover {
	background-color: #c3e7ff;
}
ul, menu, dir {
	display: block;
	list-style-type: disc;
	-webkit-margin-before: 0em;
	-webkit-margin-after: 0em;
	-webkit-margin-start: 0px;
	-webkit-margin-end: 0px;
	/*-webkit-padding-start: 40px;*/
}
.liUp {
	background: url(../../img/sys/icon_rightarrow_03.png) no-repeat 85% center;
}
.liDown {
	background: url(../../img/sys/icon_downarrow_03.png) no-repeat 85% center;
}
.cont_left  .pick {
	border-bottom: 1px solid #ddd;
	/*padding-left:12%;*/
}
.cont_left  .pick a {
	font-size: 14px;
	/*height: 40px;*/
	/*line-height: 40px;*/

}
.sort{
	line-height: 40px;
	text-align: center;
	font-size: 20px;
	color:#2f80dd;
}
.left_all{
	width:86%;
	height:90%;
	margin:auto;
}
.left_all ul li {
	border-bottom:1px solid #dedede;
	height:30px;
	line-height:30px;
}
