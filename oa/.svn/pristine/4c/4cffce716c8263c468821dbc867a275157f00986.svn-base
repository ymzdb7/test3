*{
    margin: 0;
    padding: 0;
}
body{
    font-family: "微软雅黑";
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
a{
    text-decoration: none;
    color: #2B7FE0;
}
ul{
    list-style: none;
}
.content{
    background: #fff;
}
.head{
    border-bottom: 1px solid #9E9E9E;
    height: 42px;
    width: 100%;
    margin: 0 auto;
    padding-bottom: 3px;
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 999;
}
.head li{

    height: 100%;
    float: left;
    font-family: "微软雅黑";
    font-size: 14px;
    cursor: pointer;
}
.head .headli{
    padding: 2px 10px;
    display: inline-block;
    text-align: center;
}
.index_head li img{
    border: 0;
    vertical-align: middle;
    width: 2px;
    margin-left: 20px;
}
.one{
    background-color: #2F8AE3;
    font-size: 14px;
    color: #ffffff;
    border-radius: 20px;
}
.attendTime{
    margin-top: 46px;
    width: 99%;
}
.title{
    width: 100%;
    height: 50px;
    overflow: hidden;
    margin-left: 10px;
}
.title .new{
    float: left;
    height: 50px;
    line-height: 50px;
    font-size: 22px;
    margin-left: 10px;
    color:#494d59;
}
.title .div_Img{
    float: left;
    width: 23px;
    height: 100%;
    margin-left: 20px;
}
.title .div_Img img{
    width: 20px;
    margin-top: 14px;
}
.div_time{
    float: left;
    height: 100%;
    line-height: 50px;
    margin-left: 25%;
}
.div_time select{
    width: 100px;
    height: 28px;
    border-radius: 5px;
}
.switchBtn{
    float: right;
    margin-right: 3%;
    margin-top: 14px;
}
.switchBtn ul li{
    float: left;
    border: #2F8AE3 1px solid;
    font-size: 14px;
    padding: 2px 10px;
    cursor: pointer;
}
.switchBtn ul li:first-of-type{
    border-right: none;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
}
.switchBtn ul li:last-of-type{
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}
.mainList{
    width: 96%;
    margin: 10px auto;
}
.mainList table tr{
    border:#ccc 1px solid;
}
.mainList table tr th{
    padding: 5px;
}
.on{
    background-color: #2F8AE3;
    color: #fff;
}
.attendList{
    width: 99%;
    margin-top: 46px;
}
.table tr{
    border: #ccc 1px solid;
}
.table tr:nth-child(odd){
    background-color: #F6F7F9;
}
.table tr:nth-child(even){
    background-color: #fff;
}
.table tr th{
    padding: 6px;
    font-size: 15px;
    color:#2F5C8F;
    text-align: left;
}
.table tr td{
    padding: 6px;
    font-size: 12px;
    text-align: left;
}

/*请假列表样式*/
.leave,.goOut,.busTravel{
    margin-top: 46px;
    width: 99%;
}
.newLeave{
    float: right;
    width: 90px;
    height: 28px;
    background: url(../../img/file/cabinet01.png) no-repeat;
    color:#fff;
    font-size: 14px;
    line-height: 28px;
    margin-right: 4%;
    margin-top: 14px;
    cursor: pointer;
}
.newsAdd tr td{
    padding: 10px;
}
.newsAdd tr td input{
    height: 28px;
}

#leftArrow,#rightArrow{
    cursor: pointer;
}