		</props> </property> </bean> -->
	<bean id="springContextUtil" class="com.xoa.global.proxy.SpringContextUtil"  />
	<task:scheduler id="scheduler" pool-size="3"/>
	<bean id="springQtz" class="com.xoa.util.SpringQtz">
		<property name="androidSercetKey" value="${xg_push_msg_android_sercetkey}"/>
		<property name="androidKey" value="${xg_push_msg_android_key}"/>
		<property name="iosKey" value="${xg_push_msg_ios_key}"/>
		<property name="iosSercetKey" value="${xg_push_msg_ios_sercetkey}"/>
	</bean>
	<bean id="myTask" class="com.xoa.util.TimeRchSpringQtz">
		<property name="springQtz" ref="springQtz"/>
	</bean>
	<task:scheduled-tasks scheduler="scheduler">
		<task:scheduled ref="myTask" method="run" initial-delay="5000" fixed-delay="60000"/>
	</task:scheduled-tasks>


</beans>  
