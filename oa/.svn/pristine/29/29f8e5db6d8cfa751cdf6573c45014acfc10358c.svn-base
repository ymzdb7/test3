  <select id="selRoomByRoomOfUid" parameterType="map" resultMap="BaseResultMap">
        SELECT
            im_room.*
        FROM
            im_room
          JOIN im_chatlist ON im_room.ROOM_OF=im_chatlist.TO_UID
        WHERE
            im_room.ROOM_OF = #{roomOf}
            AND FIND_IN_SET(#{uid},im_room.RMEMBER_UID)
            AND
             (
              not FIND_IN_SET(#{uid},im_chatlist.UID_IGNORE)
              or
               im_chatlist.UID_IGNORE IS  null
            )
  </select>
