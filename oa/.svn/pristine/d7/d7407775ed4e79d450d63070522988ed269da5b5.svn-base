/* 通用基础样式 */
.T_bc, .T_pbc a:hover, .T_pbc a.active, .T_darrow{border-color:#d02928;}
.T_stxt, .T_ptxt a{color:#8e8e8e;}
.T_stxt:hover, .T_ptxt a:hover{color:#d02928;text-decoration:none;}
.T_icon {color:#d02928;}
.T_bg a{color: #000  !important;}
.T_bg a.btn{color: #fff  !important;}
.T_bg .nav-list a:hover{background-color:#d02928 !important;color: #fff !important;opacity:0.6  !important;filter:alpha(opacity=60)  !important;}
.T_bg .nav-list .active a,.T_bg .nav-list .active a:hover {background-color:#d02928 !important;color:#fff !important;opacity:1  !important;filter:alpha(opacity=100)  !important;}
.T_bg .nav-list li a .badge{color:#d02928 !important;}

.item-bg{background-color:#d02928 !important;color:#fff !important;}
.item-bg a{color:#fff !important;}